<!-- app/views/posts/show.html.erb -->

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% if @post.deleted_at.present? %>
  <%= link_to 'Restore', restore_post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to restore this post?' } %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
